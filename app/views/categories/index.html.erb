<h1 align="center">Listing all categories</h1>

<%= will_paginate(@categories, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: "d-flex justify-content-center") %>
<% @categories.each do |category| %>
  <div class="row my-3 justify-content-center">    
    <div class="col-md-4">
      <div class="card bg-light p-3 text-center">
        <div class="card-title font-weight-bold h3 text-center">
          <%= link_to category.name, category_path(category) %>
        </div>
        <small><%= pluralize(category.articles.count, "articles") %></small>
      </div>
    </div>
  </div>
<% end %>
<%= will_paginate(@categories, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: "mt-4 d-flex justify-content-center") %>